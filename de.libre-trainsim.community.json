{
	"app-id": "de.libre-trainsim.community",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "20.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "libre-trainsim",
	"modules": [
		{
			"name": "libre-trainsim",
			"buildsystem": "simple",
			"build-commands": [
				"install -Dm755 run.sh /app/bin/libre-trainsim",
				"install -Dm755 Libre_TrainSim.x86_64 /app/bin/godot-runner",
				"install -Dm644 Libre_TrainSim.pck /app/bin/Libre_TrainSim.pck",
				"install -Dm644 Hainfurt.pck /app/bin/Hainfurt.pck",
				"install -Dm644 U2-Nuremberg.pck /app/bin/U2-Nuremberg.pck",
				"install -Dm644 icon.png /app/share/icons/hicolor/512x512/apps/de.libre-trainsim.community.png",
				"install -Dm644 de.libre-trainsim.community.desktop -t /app/share/applications/",
				"install -Dm644 de.libre-trainsim.community.metainfo.xml -t /app/share/metainfo/"
			],
			"sources": [
				{
					"type": "script",
					"dest-filename": "run.sh",
					"commands": [
						"cd /app/bin",
						"./godot-runner --main-pack Libre_TrainSim.pck"
					]
				},
				{
					"type": "archive",
					"url": "https://github.com/Jean28518/Libre-TrainSim/releases/download/v0.8/Libre_TrainSim_Linux64_v0-8.zip",
					"dest-filename": "Libre_TrainSim_Linux64_v0-8.zip",
					"sha256": "9ff4295a53bf4e166fbfaad8085d79d2088d0afd0917feb1fe92c99f50655820"
				},
				{
					"type": "file",
					"path": "icon.png"
				},
				{
					"type": "file",
					"path": "de.libre-trainsim.community.metainfo.xml"
				},
				{
					"type": "file",
					"path": "de.libre-trainsim.community.desktop"
				}
			]
		}
	],
	"finish-args": [
		"--socket=x11",
		"--socket=wayland",
		"--socket=pulseaudio",
		"--filesystem=~/.local/share/godot/app_userdata/libre-trainsim",
		"--device=all",
		"--share=ipc",
		"--share=network"
	]
}

